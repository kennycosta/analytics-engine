# Environment variables template
# Copy this file to .env and fill in your values

# ======================
# Paths
# ======================
PYTHONPATH=#repo path

# Data Repositories
# ======================
DATA_REPOSITORY=./data
LOGS_REPOSITORY=./logs

# SQL Server Connection (Streamlit UI and helpers)
# ======================
SQL_SERVER=ekofisk
SQL_DATABASE=
SQL_SCHEMA=
SQL_ODBC_DRIVER=ODBC Driver 17 for SQL Server
SQL_TRUSTED_CONNECTION=Yes

# Database Configuration 
DB_HOST=ekofisk
DB_PORT=1433
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_DRIVER=mssql+pyodbc
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10


# ======================
# Application Settings
# ======================
APP_TITLE=AI Analytics Engine
MAX_ROWS_DISPLAY=10000
SAMPLE_SIZE=1000

# ======================
# Statistical Thresholds
# ======================
CORRELATION_THRESHOLD=0.3
P_VALUE_THRESHOLD=0.05
OUTLIER_IQR_MULTIPLIER=1.5

# ======================
# Performance
# ======================
CACHE_TTL=3600
ENABLE_PROFILING=false
